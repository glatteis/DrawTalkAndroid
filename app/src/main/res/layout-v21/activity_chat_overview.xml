<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="me.glatteis.drawtalkandroid.ChatOverview">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_below="@+id/searchView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:longClickable="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/addChatButton"
            android:clickable="true"
            android:contentDescription="@string/add"
            android:src="@drawable/ic_control_point_black_24dp"
            android:layout_alignTop="@+id/searchView"
            android:layout_toLeftOf="@+id/settingsButton"
            android:layout_toStartOf="@+id/settingsButton"/>

    <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/settingsButton"
            android:layout_alignBottom="@+id/addChatButton"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_alignRight="@+id/listView"
            android:layout_alignEnd="@+id/listView"
            android:layout_alignTop="@+id/addChatButton"
            android:contentDescription="@string/settings"/>

    <SearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:longClickable="false"
            android:iconifiedByDefault="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/addChatButton"
            android:layout_toStartOf="@+id/addChatButton"/>

</RelativeLayout>
